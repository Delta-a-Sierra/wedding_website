package layout

templ Base(title string) {
	<!DOCTYPE html>
	<html>
		@head(title)
		<body>
			{ children... }
		</body>
	</html>
}

templ head(title string) {
	<head>
		<title>{ title }</title>
		<script src="https://unpkg.com/htmx.org@1.9.5" type="text/javascript"></script>
		<script src="https://cdn.tailwindcss.com"></script>
	</head>
}
